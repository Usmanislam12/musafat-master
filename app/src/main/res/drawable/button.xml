<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#DAA520" />
            <gradient android:angle="-90" android:startColor="#DAA520" android:endColor="#DAA520"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#DAA520" />
            <solid android:color="#DAA520"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <solid android:color="#DAA520"/>
            <stroke android:width="1dip" android:color="#DAA520" />
            <!--<gradient android:angle="-90" android:startColor="eabd06" android:endColor="#D1A615" />-->
        </shape>
    </item>
</selector>