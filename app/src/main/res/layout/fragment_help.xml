<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seriously"
    tools:context=".help">

    <!-- TODO: Update blank fragment layout -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="PROFILE:"
    android:textSize="20dp"
    android:padding="20dp"
    android:textColor="@android:color/background_dark" />


          <TextView
              android:id="@+id/help_username"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="USERNAME"
              android:textSize="20dp" android:padding="20dp"
              android:layout_marginTop="20dp"/>


          <TextView
              android:id="@+id/help_password"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="20dp"
              android:text="PASSWORD"
              android:textSize="20dp"
              android:layout_marginTop="30dp"/>


          <TextView
              android:id="@+id/help_email"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="20dp"
              android:text="EMAIL"
              android:textSize="20dp"
              android:layout_marginTop="30dp"/>

          <TextView
              android:id="@+id/help_phone"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="PHONE NO."
              android:textSize="20dp" android:padding="20dp"
              android:layout_marginTop="30dp"/>

<Button
    android:layout_width="230dp"
    android:layout_marginLeft="70dp"
    android:layout_height="wrap_content"
    android:text="EDIT PROFILE"
    android:textSize="20dp"

    android:textColor="@android:color/background_light"
    android:background="@drawable/button"/>

  </LinearLayout>
</ScrollView>